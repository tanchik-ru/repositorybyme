<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/Theme.MyApplication.TextView</item>

    </style>

    <style name="Theme.MyApplication.TextView" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#800000</item>
    </style>

    <style name="Theme.MyApplication.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:background">#363636</item>
    </style>

    <style name="Theme.MyApplication.RoundButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">#cc1b00</item>
    </style>
</resources>