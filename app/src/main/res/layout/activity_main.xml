<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/texttop"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="70dp"
        android:text="Are you in Game?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />





    <Button
        style="@style/Theme.MyApplication.Button"
        android:id="@+id/next_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:text="Yes"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/triangle_action_button" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/triangle_action_button"
        style="@style/Theme.MyApplication.RoundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginTop="46dp"
        android:layout_marginStart="50dp"
        app:srcCompat="@drawable/baseline_change_history_24"

    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/texttop" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/circle_action_button"
        style="@style/Theme.MyApplication.RoundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginTop="46dp"
        android:layout_marginStart="50dp"
        app:srcCompat="@drawable/baseline_radio_button_unchecked_24"

        app:layout_constraintStart_toEndOf="@id/triangle_action_button"
        app:layout_constraintTop_toBottomOf="@id/texttop" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/squere_action_button"
        style="@style/Theme.MyApplication.RoundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="46dp"
        android:layout_marginStart="50dp"
        app:srcCompat="@drawable/baseline_check_box_outline_blank_24"

        app:layout_constraintStart_toEndOf="@id/circle_action_button"
        app:layout_constraintTop_toBottomOf="@id/texttop" />

</androidx.constraintlayout.widget.ConstraintLayout>